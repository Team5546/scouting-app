<ul>
  <% @team.errors.messages.each_pair do |field, errors| %>
      <li>
        <%= field.to_s %> <%= errors.to_sentence %>
      </li>
  <% end %>
</ul>
<%= form_for @team do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: 'Team Name', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :number %>
    <%= f.number_field :number, placeholder: 'Team Number', class: 'form-control' %>
  </div>
  <div class='checkbox'>
    <%= f.label :high_fuel do %>
      <%= f.check_box :high_fuel %> High Fuel?
    <% end %>
  </div>
  <div class='checkbox'>
    <%= f.label :low_fuel do %>
      <%= f.check_box :low_fuel %> Low Fuel?
    <% end %>
  </div>
  <div class='checkbox'>
    <%= f.label :get_gear do %>
      <%= f.check_box :get_gear %> Can they pick up / carry gears?
    <% end %>
  </div>
  <div class='checkbox'>
    <%= f.label :deliver_gear do %>
      <%= f.check_box :deliver_gear %> Can they deliver gears to the tower?
    <% end %>
  </div>
  <div class='checkbox'>
    <%= f.label :climb_rope do %>
      <%= f.check_box :climb_rope %> Can they climb the rope?
    <% end %>
  </div>
  <div class='form-group'>
    <%= f.label :comments %>
    <%= f.text_area :comments, placeholder: 'Comments', class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :front_picture, "Front Picture" %>
    <% if @team.front_picture.present? %>
      <div>
        <%= image_tag @team.front_picture.url, class: 'img-responsive'%>
      </div>
    <% end %>
    <%= f.file_field :front_picture, accept: "image/gif, image/jpeg, image/png", class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :side_picture, "Side Picture" %>
    <% if @team.side_picture.present? %>
      <div>
        <%= image_tag @team.side_picture.url, class: 'img-responsive'%>
      </div>
    <% end %>
    <%= f.file_field :side_picture, accept: "image/gif, image/jpeg, image/png", class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :top_picture, "Top Picture" %>
    <% if @team.top_picture.present? %>
      <div>
        <%= image_tag @team.top_picture.url, class: 'img-responsive'%>
      </div>
    <% end %>
    <%= f.file_field :top_picture, accept: "image/gif, image/jpeg, image/png", class: 'form-control' %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
<% end %>
