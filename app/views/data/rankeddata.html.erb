<h1 class="display-4">Ranked Reports</h1>

<div>
    <%= link_to "Edit Multipliers", rankmultiplier_path, class: "btn btn-primary" %>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Team</th>
      <th>Score</th>
    </tr>
  </thead>
  
  <tbody>
    <% @teams.sort_by(&:score).reverse.each  do |team| %>
      <tr>
        <td><%= team.name %> <small><%= team.number %></small></td>
        <td><%= team.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>